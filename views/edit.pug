extends layouts/main-layout

block content
    form(method="post")
        .mb-3.row.align-items-center.justify-content-center
            label.col-sm-3.col-form-label(for='todo-name') ToDo name
            .col-sm-9
                input#todo-name.form-control(type='text' name="name" value=todo.name)
        .mb-3.row
            label.col-sm-3.col-form-label(for='todo-body') ToDo body
            .col-sm-9
                textarea#todo-body.form-control(type='text' name="body" autofocus)= todo.body
        .mb-3.row
            .col-6.justify-content-center
                a#update-todo.btn.btn-primary.my-1.d-block(data-id=id) Update
            .col-6.justify-content-center
                a.btn.btn-warning.mx-1.cancel-edit-todo.my-1.d-block(href='/') Cancel
